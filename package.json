{
  "version": "7.7.7",
  "name": "zobzn.com",
  "author": "Semyon Tokarev",
  "description": "My Notes And Tools Website",
  "homepage": "https://zobzn.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zobzn/zobzn.com/"
  },
  "scripts": {
    "lint": "eslint --fix -- ./src",
    "test": "jest --collect-coverage",
    "clean": "rimraf .next/ out/",
    "build": "next build",
    "start": "nodemon --exec \"next dev\"",
    "export": "npm run clean && next build && next export",
    "serve": "npx serve out -l 80",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --bail --find-related-tests"
    ],
    "**/*.{yml,yaml,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0.6.0",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.0.8",
    "gray-matter": "^4.0.3",
    "husky": "4",
    "jest": "^27.0.1",
    "lint-staged": "^11.0.0",
    "next": "^11.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "prismjs": "^1.23.0",
    "raw-loader": "^4.0.2",
    "rehype-raw": "^5.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.34.0",
    "typescript": "^4.3.2",
    "unified": "^9.2.1"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.21.3",
    "date-fns-tz": "^1.1.4",
    "fontfaceobserver": "^2.1.0",
    "formik": "^2.2.8",
    "framer-motion": "^4.1.17",
    "front-matter": "^4.0.2",
    "glob": "^7.1.7",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-react": "^6.2.0"
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11",
    "> 1%"
  ]
}

{
  "version": "7.7.7",
  "name": "zobzn.com",
  "author": "Semyon Tokarev",
  "description": "My Notes And Tools Website",
  "homepage": "https://zobzn.com/",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"next dev\"",
    "lint": "eslint --fix -- ./src",
    "test": "jest --collect-coverage",
    "clean": "rimraf .next/ out/",
    "build": "next build",
    "start": "next start",
    "export": "npm run clean && next build && next export",
    "serve": "npx serve out -l 80",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --bail --find-related-tests"
    ],
    "**/*.{yml,yaml,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0.4.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "gray-matter": "^4.0.2",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "next": "^9.3.5",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "prismjs": "^1.20.0",
    "raw-loader": "^4.0.1",
    "rehype-raw": "^4.0.2",
    "rehype-stringify": "^7.0.0",
    "remark-parse": "^8.0.2",
    "remark-rehype": "^6.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5",
    "unified": "^9.0.0"
  },
  "dependencies": {
    "@analytics/google-analytics": "^0.3.1",
    "@analytics/google-tag-manager": "^0.2.1",
    "analytics": "^0.3.5",
    "change-case": "^4.1.1",
    "classnames": "^2.2.6",
    "dayjs": "^1.8.25",
    "fontfaceobserver": "^2.1.0",
    "formik": "^2.1.4",
    "framer-motion": "^1.10.3",
    "glob": "^7.1.6",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "then-sleep": "^1.0.1"
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11",
    "> 1%"
  ]
}

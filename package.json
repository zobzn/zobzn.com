{
  "version": "7.7.7",
  "name": "zobzn.com",
  "author": "Semyon Tokarev",
  "description": "My Notes And Tools Website",
  "homepage": "https://zobzn.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zobzn/zobzn.com/"
  },
  "scripts": {
    "lint": "eslint --fix -- ./src",
    "test": "jest --collect-coverage",
    "clean": "rimraf .next/ out/",
    "build": "next build",
    "start": "nodemon --exec \"next dev\"",
    "export": "npm run clean && next build && next export",
    "serve": "npx serve out -l 80",
    "format": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --bail --find-related-tests"
    ],
    "**/*.{yml,yaml,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "^0.5.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "babel-eslint": "^10.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "gray-matter": "^4.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.4",
    "next": "^10.0.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prismjs": "^1.23.0",
    "raw-loader": "^4.0.2",
    "rehype-raw": "^5.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.6",
    "unified": "^9.0.0"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "classnames": "^2.2.6",
    "date-fns": "^2.17.0",
    "date-fns-tz": "^1.1.1",
    "fontfaceobserver": "^2.1.0",
    "formik": "^2.2.6",
    "framer-motion": "^3.3.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rehype-react": "^6.2.0",
    "then-sleep": "^1.0.1"
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11",
    "> 1%"
  ]
}
